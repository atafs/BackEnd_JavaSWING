        startAttach.getStyleClass().add("button-red");
        startAttach.setOnAction(new EventHandler<ActionEvent>() {
            @Override
            public void handle(ActionEvent event) {
            	testRunProgram("starting the program..." + "\n");
            	testRunProgram("half way there..." + "\n");
            	testRunProgram("xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyy..." + "\n");
            	testRunProgram("finished the program..." + "\n");
            }
        });
        
        Button cleanAttach = new Button("CLEAN");
        GridPane.setConstraints(cleanAttach, 1, 1);
        cleanAttach.getStyleClass().add("button-orange");
        cleanAttach.setOnAction(new EventHandler<ActionEvent>() {
            @Override
            public void handle(ActionEvent event) {
            	console.setText("");
            	messageToConsole = "";
            	
            }
